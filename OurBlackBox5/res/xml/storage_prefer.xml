<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >
    <PreferenceCategory 
        android:title="저장 설정">
        
        <CheckBoxPreference
            android:key="storeDefault"
            android:summary="어플리케이션 실행후 녹화 된 영상은 자동으로 저장됩니다."
            android:title="녹화 동영상 저장"
            android:enabled="false" 
            android:defaultValue="true"/>
        
        <ListPreference 
            android:key="storageLocation"
            android:title="저장 위치"
           	android:summary="저장할 위치를 선택하세요."
           	android:dialogTitle="저장 위치 선택"
           	android:entries="@array/storageLocation_value"
           	android:entryValues="@array/storageLocation_key"
           	android:defaultValue="internal"/>
        
    </PreferenceCategory>
</PreferenceScreen>
